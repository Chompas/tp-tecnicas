<loggers>
	<logger>
		<name>Logger1</name>
		<level>INFO</level>
		<type>json</type>
		<outputs>output/out1.log,console</outputs>
	</logger>
	
	<logger>
		<name>Logger2</name>
		<level>DEBUG</level>
		<format>%d{HH:mm:ss} %n %p %n %m</format>
		<separator>-</separator>
		<type>text</type>
		<outputs>console</outputs>
		<customOutputs>
			<implementor>ar.fiuba.tecnicas.test.handler.CustomHandler</implementor>
			<param1>customHandler.log</param1>
		</customOutputs>
	</logger>
</loggers>

